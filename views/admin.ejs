<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>Dashboard</h1>
      <p>Below is the list of all active sessions:</p>

      <% if (sessions.length === 0) { %>
      <p>No active sessions found.</p>
      <% } else { %>
      <table border="1" cellpadding="10">
        <thead>
          <tr>
            <th>Session ID</th>
            <th>User ID</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% sessions.forEach(function(session) { %>
          <tr>
            <td><%= session.id %></td>
            <td><%= session.userId %></td>
            <td>
              <form method="POST" action="/admin/revoke/<%= session.id %>">
                <input
                  type="hidden"
                  name="sessionId"
                  value="<%= session.id %>"
                />
                <button
                  type="submit"
                  onclick="return confirm('Are you sure want to revoke this session?');"
                >
                  Revoke
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
